@page "/test"
@inject HttpClient Http;
@using Festivalproject.Shared.Models;


<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <td>Id</td>

    </tr>
    </thead>
    <tbody>
    @foreach (var shift in shifts)
    {
        <tr>
            <td>@shift.Name</td>
            <td>@shift.Id</td>
        </tr>
    }
    </tbody>
</table>

<h3>Test</h3>

@code {
    private List<Shift> shifts { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("Get shift from client ");
        shifts = await Http.GetFromJsonAsync<List<Shift>>("https://localhost:7226/api/Shifts");
    }

}